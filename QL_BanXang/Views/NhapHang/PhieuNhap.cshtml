@model IEnumerable<QL_BanXang.Models.PHIEUNHAP>

@{
    ViewBag.Title = "PhieuNhap";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container">
    <h2 class="text-primary">Thông Tin Nhân Viên Nhập Hàng</h2>

    <p>
        <a href="@Url.Action("ThemPhieuNhap")" class="btn btn-success"><i class="fas fa-plus-circle"></i> Nhập hàng</a>
    </p>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Ngày Nhập</th>
                <th>Mã Nhà Cung Cấp</th>
                <th>Mã Nhân Viên</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NgayNhap)</td>
                    <td>@Html.DisplayFor(modelItem => item.NHACUNGCAP.TenNCC)</td>
                    <td>@Html.DisplayFor(modelItem => item.NHANVIEN.TenNV)</td>
                    <td>
                        <a href="@Url.Action("ChiTietPhieuNhap", new { mapn = item.MaPN })" class="btn btn-info"><i class="fas fa-info-circle"></i> Chi Tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
