@model IEnumerable<QL_BanXang.Models.NHANVIEN>

@{
    ViewBag.Title = "HoatDong";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Hoạt Động Từng Nhân Viên</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNV)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>
            @Html.ActionLink("Giờ làm việc", "GioLamNV", new { maNV = item.MaNV }, new { @class = "btn btn-primary btn-sm" }) |
            @Html.ActionLink("Lương", "DanhSachLuong", new { maNV = item.MaNV, year=DateTime.Now.Year }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
