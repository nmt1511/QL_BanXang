@model QL_BanXang.Models.CATRUC

@{
    ViewBag.Title = "Xóa ca trực";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Xóa ca trực</h2>

<h3>Bạn có chắc chắn muốn xóa mục này?</h3>
<div>
    <h4>Thông tin ca trực</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên ca trực
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenCaTruc)
        </dd>

        <dt>
            Giờ bắt đầu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioBatDau)
        </dd>

        <dt>
            Giờ kết thúc
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GioKetThuc)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
</div>
