@model IEnumerable<QL_BanXang.Models.LOAIHANG>

@{
    ViewBag.Title = "Danh sách Loại Sản Phẩm";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Danh sách Loại Sản Phẩm</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Themloaisanpham", null, new { @class = "btn btn-success" })
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenLoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Xóa", "XoaLoaiSP", new { id = item.MaLoai }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>